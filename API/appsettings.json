{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=NetWebApiMasterFeatures;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "AzureAd": {
    "Jwt": {
      "Issuer": "platform.identity",
      "Audience": "orders.api",
      "SigningKey": "THIS_IS_A_SUPER_SECURE_32_CHAR_SIGNING_KEY!!",
      "AccessTokenMinutes": 15
    }
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
